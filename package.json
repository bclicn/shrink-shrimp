{
  "name": "shrink-shrimp",
  "version": "0.1.0",
  "author": {
    "name": "bcli",
    "email": "bclicn@gmail.com"
  },
  "description": "Batch shrink scanned PDFs using GhostScript",
  "license": "MIT",
  "keywords": [
    "PDF",
    "Shrink",
    "GhostScript"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "build-mac": "node ./tools/build-mac.js",
    "build-lin": "npx electron-packager . shrink-shrimp --platform=linux --arch=x64 --version=$npm_package_version --icon=assets/icon/shrimp_linux.png --overwrite --asar=true   --prune=true --out=release-builds",
    "build-win": "npx electron-packager . shrink-shrimp --platform=win32 --arch=x64 --version=%npm_package_version% --icon=assets/icon/shrimp_win.icon--overwrite --electron-version=4.1.1  --asar  --prune=true --out=release-builds --version-string.CompanyName=bclicn --version-string.ProductVersion=0.1.0 --version-string.ProductName=Shrink-Shrimp"
  },
  "repository": "https://github.com/bclicn/pdf-shrink",
  "devDependencies": {
    "electron": "^4.1.1",
    "electron-packager": "^13.1.1"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "shelljs": "^0.8.3"
  }
}
